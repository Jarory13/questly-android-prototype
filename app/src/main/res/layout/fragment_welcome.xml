<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/welcome_background" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:scaleType="fitCenter"
        android:src="@drawable/welcome_app_logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <com.questly.android.commons.TypeFacedButton
            style="?android:attr/borderlessButtonStyle"
            android:id="@+id/email_login_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/login"
            android:textSize="32sp"
            android:background="@drawable/gray_background_touchstate"
            android:textColor="@color/white"/>

        <com.questly.android.commons.TypeFacedButton
            style="?android:attr/borderlessButtonStyle"
            android:id="@+id/signup_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="32sp"
            android:background="@drawable/green_background_touchstate"
            android:text="@string/signup"
            android:textColor="@color/white"/>
    </LinearLayout>

</RelativeLayout>