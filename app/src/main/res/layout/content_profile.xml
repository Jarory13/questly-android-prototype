<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_profile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.questly.android.ui.ProfileActivity">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:background="@color/white"
                  android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/lighter_gray"
                android:orientation="vertical">
            <com.questly.android.commons.TypeFacedTextView
                    android:id="@+id/user_name_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:padding="4dp"
                    android:text="Mark Z."
                    android:textSize="42sp"/>

            <com.questly.android.commons.TypeFacedButton
                    android:id="@+id/quest_log_button"
                    android:background="@drawable/white_rect_background"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:paddingLeft="32dp"
                    android:paddingRight="32dp"
                    android:layout_marginBottom="16dp"
                    android:textColor="@color/blue"
                    android:layout_gravity="center_horizontal"
                    android:text="Quest Log"
                    android:textSize="32sp"/>

        </LinearLayout>

        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="wrap_content">
            <LinearLayout
                    android:orientation="horizontal"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <com.questly.android.commons.TypeFacedTextView
                        android:id="@+id/xp_text"
                        android:text="XP"
                        android:textSize="32sp"
                        android:paddingLeft="16dp"
                        android:gravity="left|start"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                    <com.questly.android.commons.TypeFacedTextView
                            android:id="@+id/level_text"
                            android:text="15"
                            android:textSize="32sp"
                            android:paddingLeft="4dp"
                            android:paddingRight="16dp"
                            android:layout_width="wrap_content"
                            android:textColor="@color/blue"
                            android:layout_alignParentRight="true"
                            android:layout_height="wrap_content"/>

                    <com.questly.android.commons.TypeFacedTextView
                            android:id="@+id/lvl"
                            android:text="lvl"
                            android:textSize="20sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_toLeftOf="@+id/level_text"
                            android:layout_toStartOf="@+id/level_text"/>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout android:layout_width="match_parent"
                      android:orientation="horizontal"
                      android:layout_height="32dp">
            <View android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:background="@color/questly_green"
                  android:layout_weight="2"/>

            <View android:layout_width="0dp"
                  android:background="@color/light_green"
                  android:layout_height="match_parent"
                  android:layout_weight="3"/>

        </LinearLayout>
        <com.questly.android.commons.TypeFacedTextView
                android:layout_width="match_parent"
                android:text="Stats"
                android:gravity="center_horizontal"
                android:textSize="36sp"
                android:padding="4dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:textColor="@color/gray"
                android:layout_height="wrap_content"/>

        <LinearLayout
                android:orientation="horizontal"
                android:paddingTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <com.questly.android.commons.TypeFacedTextView
                    android:text="Health:"
                    android:textSize="26sp"
                    android:paddingLeft="16dp"
                    android:gravity="left|start"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:textColor="@color/health_green"
                    android:layout_height="wrap_content"/>

            <com.questly.android.commons.TypeFacedTextView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:text="15"
                    android:textSize="26sp"
                    android:paddingLeft="4dp"
                    android:paddingRight="16dp"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:layout_alignParentRight="true"/>

        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:paddingTop="16dp"
                android:layout_height="wrap_content">

            <com.questly.android.commons.TypeFacedTextView
                    android:text="Strength:"
                    android:textSize="26sp"
                    android:paddingLeft="16dp"
                    android:gravity="left|start"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:textColor="@color/red"
                    android:layout_height="wrap_content"/>

            <com.questly.android.commons.TypeFacedTextView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:text="15"
                    android:textSize="26sp"
                    android:paddingLeft="4dp"
                    android:paddingRight="16dp"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:layout_alignParentRight="true"/>

        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:paddingTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <com.questly.android.commons.TypeFacedTextView
                    android:text="Defense:"
                    android:textSize="26sp"
                    android:paddingLeft="16dp"
                    android:gravity="left|start"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:textColor="@color/defense_gray"
                    android:layout_height="wrap_content"/>

            <com.questly.android.commons.TypeFacedTextView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:text="15"
                    android:textSize="26sp"
                    android:paddingLeft="4dp"
                    android:paddingRight="16dp"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:layout_alignParentRight="true"/>

        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <com.questly.android.commons.TypeFacedTextView
                    android:text="Magic:"
                    android:textSize="26sp"
                    android:paddingLeft="16dp"
                    android:gravity="left|start"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:textColor="@color/magic_blue"
                    android:layout_height="wrap_content"/>

            <com.questly.android.commons.TypeFacedTextView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:text="15"
                    android:textSize="26sp"
                    android:paddingLeft="4dp"
                    android:paddingRight="16dp"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:layout_alignParentRight="true"/>

        </LinearLayout>
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
