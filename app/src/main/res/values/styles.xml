<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/questly_green</item>
    </style>

    <style name="TransparentToolbar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:height">?attr/actionBarSize</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorPrimary">@color/white_transparent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="BaseEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:layout_height">48dp</item>
        <item name="android:textSize">22sp</item>
        <item name="colorControlNormal">@color/gray</item>
    </style>

    <style name="WhiteEditTextTheme">
        <item name="colorAccent">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="GrayEditTextTheme">
        <item name="colorAccent">@color/gray</item>
        <item name="colorControlActivated">@color/gray</item>
        <item name="colorControlHighlight">@color/gray</item>
        <item name="android:tint">@color/gray</item>
    </style>

    <style name="LoginSignupEditTextStyle" parent="BaseEditTextStyle">
        <item name="android:theme">@style/WhiteEditTextTheme</item>
    </style>

    <style name="CreateTaskEditTextStyle" parent="BaseEditTextStyle">
        <item name="android:theme">@style/GrayEditTextTheme</item>
    </style>
</resources>
